<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gnete.springboot.demo.mapper.TestMapper" >
    <resultMap id="BaseResultMap" type="com.gnete.springboot.demo.entity.TestEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
    </resultMap>
    
    <sql id="Base_Column_List" >
        id, name, age 
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
       SELECT 
       <include refid="Base_Column_List" />
	   FROM test
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT 
       <include refid="Base_Column_List" />
	   FROM test
	   WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.gnete.springboot.demo.entity.TestEntity" >
       INSERT INTO 
       		test
       		(name,age) 
       	VALUES
       		(#{name}, #{age})
    </insert>
    
    <update id="update" parameterType="com.gnete.springboot.demo.entity.TestEntity" >
       UPDATE 
       		test 
       SET 
       	<if test="name != null">name = #{name},</if>
       	<if test="age != null">age = #{age}</if>
       WHERE 
       		id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.Long" >
       DELETE FROM
       		 test 
       WHERE 
       		 id =#{id}
    </delete>
    
    <update id="update2" parameterType="com.gnete.springboot.demo.entity.TestEntity"  >
       UPDATE 
       		test 
       SET 
       	age = age - #{age}
       WHERE 
       		id = #{id}
    </update>
</mapper>